<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="gridElements">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">50dp</item>
    </style>

    <style name="nbWinLose">
        <item name="android:width">90dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:textSize">50sp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:text">@string/valeurRatioBase</item>
    </style>

    <style name="titreJeu">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="boutonsRatios">
        <item name="android:layout_margin">20dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:padding">20dp</item>
    </style>

    <style name="bouton_jeu_activity">
        <item name="android:layout_height">80dp</item>
        <item name="android:background">@color/colorBoutonJeuActivity</item>
        <item name="android:textSize">25sp</item>
        <item name="android:layout_marginLeft">50dp</item>
        <item name="android:layout_marginRight">50dp</item>
    </style>

    <style name="stat_text_ratio">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">25sp</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>

    <style name="stats_nb_winlose">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">25sp</item>
    </style>


    <string name="valeurRatioBase">0</string>
</resources>
